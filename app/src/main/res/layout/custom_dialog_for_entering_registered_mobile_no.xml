<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginStart="20sp"
    android:layout_marginEnd="20sp"
    android:background="@drawable/new_dashboard_background">
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:weightSum="10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:editable="false"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginStart="5dp"
            android:layout_weight="8"
            android:id="@+id/title"
            android:text="@string/forgot_password"/>
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_weight="2"
            android:background="@color/colorPrimary"
            android:layout_gravity="center"
            android:visibility="visible"
            android:focusableInTouchMode="false"
            float:srcCompat="@drawable/cross_white" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:text="@string/please_enter_registered_mobile_no_for_password_reset"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/edt_Email_Addresss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="45dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10sp"
                android:background="@drawable/btn_color_disabled"
                android:hint="@string/email"
                android:visibility="gone"

                android:padding="5dp"
                android:enabled="false"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="17sp" />


            <EditText
                android:id="@+id/edt_Mobile_Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="45dp"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10sp"
                android:background="@drawable/btn_color_disabled"
                android:hint="@string/mobileno"

                android:padding="5dp"
                android:enabled="false"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="17sp"
                android:maxLength="10" />


            <TextView
                android:id="@+id/tv_get_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/get_otp"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"
                android:visibility="gone"
                android:textStyle="bold"
                android:padding="20sp"
                android:layout_margin="10sp"/>


                <EditText
                    android:id="@+id/edt_registered_mobile_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="55dp"
                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="20sp"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="30sp"
                    android:hint="@string/mobileno"
                    android:layout_gravity="center"
                    android:gravity="center|start"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:textColorHint="@color/dark_grey"
                    android:textColor="@color/dark_grey"
                    android:textSize="14sp"
                    android:drawableStart="@drawable/ic_phone_android"
                    android:drawablePadding="10dp"
                    android:layout_weight="5"
                    android:background="@drawable/form_bg_edittext_bg"
                    android:inputType="number"
                    android:maxLength="10"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"/>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="10sp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/Resend_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginEnd="20sp"
                    android:layout_marginStart="20sp"
                    android:layout_weight="3"
                    android:padding="15sp"
                    android:clickable="true"
                    android:editable="false"
                    android:visibility="gone"
                    android:gravity="center"
                    android:text="@string/resend_otp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />


                <Button
                    android:id="@+id/btn_get_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="15sp"
                    android:gravity="center"
                    android:text="@string/get_otp"
                    android:layout_margin="20sp"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>