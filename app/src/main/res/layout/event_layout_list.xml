<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/CardSchemeName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="15dp"
    android:layout_marginEnd="10dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10sp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cw_shadow_bg"
        android:orientation="vertical">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="7"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Date: "
            android:layout_gravity="center|start"
            android:gravity="center|start"
            android:layout_weight="3"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/row_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"

            android:textColor="@color/red"
            android:textSize="18dp"/>

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_delete"
            android:textColor="@color/black"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="10"
        android:orientation="horizontal">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From: "
            android:layout_weight="5"
            android:layout_marginStart="5dp"
            android:layout_gravity="center|start"
            android:gravity="center|start"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/row_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"

            android:textColor="@color/red"
            android:textSize="16sp"/>



    </LinearLayout>
    <TextView
        android:id="@+id/row_event_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:gravity="center"/>

    <TextView
        android:id="@+id/row_event_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:textColor="@color/brown"
        android:textSize="18sp"
        android:layout_gravity="center|start"
        android:gravity="center|start"/>

    <ImageView
        android:id="@+id/Iv_Event_Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/row_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_grey"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:visibility="gone"
        android:layout_weight="6"
        android:minHeight="60sp"
        android:editable="false"
        android:layout_gravity="center|start"
        android:gravity="center|start"
        android:textSize="16sp"
        android:textColorHint="@color/dark_grey"/>


</LinearLayout>
</androidx.cardview.widget.CardView>