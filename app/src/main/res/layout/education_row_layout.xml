<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/CardSchemeName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="15dp"
    android:layout_marginEnd="10dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10sp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cw_shadow_bg"
        android:orientation="vertical">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="7"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/row_education_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"

                android:textColor="@color/red"
                android:textSize="18dp"/>

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_delete"
                android:textColor="@color/black"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="10"
            android:orientation="horizontal">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type: "
                android:layout_marginStart="5dp"
                android:layout_gravity="center|start"
                android:gravity="center|start"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/row_education_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:layout_marginStart="5dp"

                android:layout_gravity="center|start"
                android:gravity="center|start"
                android:textSize="16sp"/>



        </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_weight="5"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="14sp"/>




        <TextView
            android:id="@+id/row_education_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_gravity="center|start"
            android:gravity="center|start"/>

        <TextView
            android:id="@+id/row_education_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textColor="@color/brown"
            android:textSize="18sp"
            android:layout_gravity="center|start"
            android:gravity="center|start"/>




        <TextView
            android:id="@+id/row_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_grey"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_weight="6"
            android:minHeight="60sp"
            android:editable="false"
            android:layout_gravity="center|start"
            android:gravity="center|start"
            android:textSize="16sp"
            android:textColorHint="@color/dark_grey"/>

        <LinearLayout
            android:id="@+id/LinearCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/cw_button_shadow_primary"
            android:layout_weight="5">
            <ImageView
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_phone_android"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_marginStart="10sp"
                android:layout_gravity="center"
                android:text="CALL"/>

            <TextView
                android:id="@+id/row_contact_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:visibility="gone"
                android:layout_weight="6"
                android:minHeight="60sp"
                android:editable="false"
                android:layout_gravity="center|start"
                android:gravity="center|start"
                android:textSize="16sp"
                android:textColorHint="@color/dark_grey"/>

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
