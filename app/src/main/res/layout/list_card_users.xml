<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="135dp"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:layout_margin="6dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/recycleritem"
        android:layout_width="match_parent"
        android:background="@color/grey_bg_color"
        android:minHeight="135dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                app:cardBackgroundColor="@color/grey_bg_color"
                android:alpha="0.6"
                app:cardElevation="8dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/vehicle_thumbnail"
                    android:layout_width="80dp"
                    app:srcCompat="@drawable/logo1"
                    android:layout_height="80dp"

                    android:layout_margin="6dp" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/relativeleft">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_member_id"
                    android:textColor="@color/primary_light_blue"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />


                <TextView
                        android:id="@+id/tv_name"
                        android:textColor="@color/primary_light_blue"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp" />




                    <TextView
                        android:id="@+id/age_gender"
                        android:textColor="@color/primary_light_blue"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/tv_father_name"
                        android:textColor="@color/primary_light_blue"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_spouse_name"
                    android:textColor="@color/primary_light_blue"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_mobile_no"
                    android:textColor="@color/primary_light_blue"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/tv_address"
                    android:textColor="@color/primary_light_blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/tv_affiliated_sabha"
                    android:textColor="@color/primary_light_blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />




            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>