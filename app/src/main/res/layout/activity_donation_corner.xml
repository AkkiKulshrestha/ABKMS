<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/form_background_color"
    android:layout_height="match_parent">


    <include layout="@layout/toolback_with_back"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_margin="10dp"
                android:padding="5dp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bank_account_details_for_donation"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_margin="5dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:padding="5dp"
                        android:weightSum="10"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/beneficiary_name"
                            android:layout_weight="5"

                            android:textColor="@color/darker_gray"
                            />

                        <TextView
                            android:id="@+id/tv_beneficiary_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:textStyle="bold"
                            android:layout_weight="5"

                            android:textColor="@color/black"
                            />


                    </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="10sp"
                       android:layout_marginStart="10sp"
                       android:layout_marginEnd="10sp"
                       android:padding="5dp"
                       android:weightSum="10"

                       android:orientation="horizontal">


                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="@string/account_number"
                           android:layout_weight="5"

                           android:textColor="@color/darker_gray"
                           />

                       <TextView
                           android:id="@+id/tv_account_no"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginStart="5dp"
                           android:textStyle="bold"
                           android:layout_weight="5"

                           android:textColor="@color/black"
                           />


                   </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:padding="5dp"
                        android:weightSum="10"

                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/bank_name"
                            android:layout_weight="5"

                            android:textColor="@color/darker_gray"
                            />

                        <TextView
                            android:id="@+id/tv_bank_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:textStyle="bold"
                            android:layout_weight="5"

                            android:textColor="@color/black"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:padding="5dp"
                        android:weightSum="10"

                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ifsc_code"
                            android:layout_weight="5"

                            android:textColor="@color/darker_gray"
                            />

                        <TextView
                            android:id="@+id/tv_bank_ifsc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:textStyle="bold"
                            android:layout_weight="5"

                            android:textColor="@color/black"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginBottom="10sp"
                        android:padding="5dp"
                        android:weightSum="10"

                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/bank_branch"
                            android:layout_weight="5"
                            android:textColor="@color/darker_gray"
                            />

                        <TextView
                            android:id="@+id/tv_bank_branch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:textStyle="bold"
                            android:layout_weight="5"
                            android:textColor="@color/black"
                            />


                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/LayoutDonate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:visibility="visible"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:textSize="17sp"
                    android:text="DONATE USING UPI"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/upi_icons"/>


            </LinearLayout>

            <Button
                android:id="@+id/AddDonorInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cw_button_shadow"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:visibility="gone"
                android:text="ADD NEW DONATION INFORMATION"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:visibility="visible">


                <LinearLayout
                    android:id="@+id/LayoutTabAllDonation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/colorPrimaryDark">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="All Donations"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textAllCaps="true"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <View android:layout_height="match_parent"
                    android:layout_width="1dp"
                    android:background="@color/black"/>

                <LinearLayout
                    android:id="@+id/LayoutTabMyDonation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/colorPrimaryLight">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="My Donation"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_parent_donor_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:visibility="gone"
                android:padding="5dp">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_parent_my_donation_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:visibility="gone"
                android:padding="5dp">

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>