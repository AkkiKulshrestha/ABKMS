<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/form_background_color"
    android:fitsSystemWindows="true"
    android:id="@+id/Scroll_Bottom">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




            <EditText
                android:id="@+id/edt_Full_Name"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/btn_color_form_background"
                android:hint="@string/applicant_full_name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName|textCapCharacters"
                android:padding="5dp"
                android:importantForAutofill="no"
                android:layout_weight="5"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="17sp" />







            <EditText
                android:id="@+id/edt_FatherFullName"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_color_form_background"
                android:hint="@string/father_s_full_name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName|textCapCharacters"
                android:padding="5dp"
                android:importantForAutofill="no"

                android:layout_weight="5"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="17sp" />


            <EditText
                android:id="@+id/edt_MotherFullName"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="5sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_color_form_background"
                android:hint="@string/mother_s_name"
                android:imeOptions="actionDone"
                android:inputType="textPersonName|textCapCharacters"
                android:padding="5dp"
                android:importantForAutofill="no"

                android:layout_weight="5"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="17sp" />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"

            android:weightSum="10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="5"
                android:background="@drawable/btn_color_form_background">

                <Spinner
                    android:id="@+id/Spn_Gender"
                    style="@style/Widget.AppCompat.DropDownItem.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:padding="5dp"
                    android:entries="@array/spin_item_gender"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>



            <EditText
                android:id="@+id/edt_Dob"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/btn_color_form_background"
                android:hint="@string/date_of_birth"
                android:inputType="date"
                android:focusable="false"
                android:layout_weight="5"
                android:editable="false"
                android:imeOptions="actionNext"
                android:padding="5dp"
                android:importantForAutofill="no"

                android:paddingTop="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="17sp" />



        </LinearLayout>

        <EditText
            android:id="@+id/edt_Mobile_Number"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="5dp"

            android:background="@drawable/btn_color_form_background"
            android:hint="Enter Mobile No. connected to Whatsapp"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="10"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/edt_Mobile_Number1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn_color_form_background"
            android:hint="@string/mobileno1"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="17sp"
            android:maxLength="10" />


        <EditText
            android:id="@+id/edt_Email_Address"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5sp"
            android:background="@drawable/btn_color_form_background"
            android:hint="@string/email"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="17sp" />




    </LinearLayout>
</ScrollView>