<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="5sp"
    android:layout_marginRight="5sp"
    android:layout_gravity="center"
    app:ignore="NamespaceTypo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:orientation="horizontal"

            android:background="@color/colorPrimary"
            android:weightSum="10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:editable="false"
                android:cursorVisible="false"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:layout_weight="9"
                android:textAllCaps="true"
                android:id="@+id/title"
                android:text="DONATION INFO"/>
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_weight="1"
                app1:srcCompat="@drawable/cross_white"
                android:tint="@color/white"
                android:layout_gravity="center"
                android:visibility="visible"
                android:focusableInTouchMode="false"
                />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header1"
            android:background="@color/white"
            android:layout_below="@+id/layout_title"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_member_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>



                <EditText
                    android:id="@+id/EdtMemberName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_weight="5"
                    android:background="@drawable/form_bg_edittext_bg"
                    android:focusableInTouchMode="true"
                    android:gravity="center|start"
                    android:hint="Member Name *"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:minHeight="55dp"
                    android:textColor="@color/dark_grey"
                    android:textColorHint="@color/dark_grey"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/EdtDonorCityName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_weight="5"
                    android:background="@drawable/form_bg_edittext_bg"
                    android:focusableInTouchMode="true"
                    android:gravity="center|start"
                    android:hint="Donor City / State Name *"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:minHeight="55dp"
                    android:visibility="gone"
                    android:textColor="@color/dark_grey"
                    android:textColorHint="@color/dark_grey"
                    android:textSize="14sp" />





                <EditText
                    android:id="@+id/EdtDonationAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="55dp"
                    android:hint="Donation Amount *"
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_gravity="center"
                    android:gravity="center|start"
                    android:textColorHint="@color/dark_grey"
                    android:textColor="@color/dark_grey"
                    android:textSize="14sp"
                    android:layout_weight="5"
                    android:background="@drawable/form_bg_edittext_bg"
                    android:maxLength="8"
                    android:inputType="number"
                    android:focusableInTouchMode="true"
                    android:imeOptions="actionDone"
                    />

                <EditText
                    android:id="@+id/EdtDonationFor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:hint="Reason For Donation"
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_gravity="center"
                    android:gravity="center|start"
                    android:textColorHint="@color/dark_grey"
                    android:textColor="@color/dark_grey"
                    android:textSize="14sp"
                    android:layout_weight="5"
                    android:background="@drawable/form_bg_edittext_bg"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:focusableInTouchMode="true"
                    android:imeOptions="actionDone"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="20sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="20sp"
                    android:weightSum="10">



                    <Button
                        android:id="@+id/Btn_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cw_button_shadow_primary"
                        android:layout_margin="5dp"
                        android:text="Submit"
                        android:layout_weight="5"
                        android:textColor="@color/white"
                        />




                </LinearLayout>


            </LinearLayout>



        </ScrollView>


    </RelativeLayout>
</RelativeLayout>
